<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E80D79A3"
    tools:context=".Messages">

    <ImageView
        android:id="@+id/user_one2"
        android:layout_width="82dp"
        android:layout_height="68dp"
        android:layout_alignTop="@id/user_one"
        android:layout_marginTop="100dp"
        android:src="@drawable/stock_icon" />

    <EditText
        android:id="@+id/brandName"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="false"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="53dp"
        android:background="#FD72D6"
        android:ems="10"
        android:text="  Care Finder"
        android:textColor="#F8F5F5"
        android:textSize="30sp"
        tools:textStyle="bold" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/bottom_toolbar"
        android:layout_width="410dp"
        android:layout_height="74dp"
        android:layout_alignWithParentIfMissing="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="-2dp"
        android:background="#EDFFAB00"
        android:minHeight="?attr/actionBarSize" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="9dp"
        android:clickable="true"
        android:foreground="@drawable/home_button"
        app:backgroundTint="#FFFFFF"
        app:srcCompat="@drawable/home_button" />

    <ImageView
        android:id="@+id/user_one"
        android:layout_width="76dp"
        android:layout_height="67dp"
        android:layout_alignTop="@id/brandName"
        android:layout_marginTop="71dp"
        android:src="@drawable/images" />

    <TextView
        android:id="@+id/message_example"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/brandName"
        android:layout_alignLeft="@id/user_one"
        android:layout_marginLeft="78dp"
        android:layout_marginTop="-5dp"
        android:text="Hey! I saw you dogsit...."
        android:textColor="#FFFFFF"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/message_example2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/brandName"
        android:layout_marginLeft="-4dp"
        android:layout_marginTop="85dp"
        android:layout_toRightOf="@id/user_one"
        android:text="Will you look after my kitty?"
        android:textColor="#FFFFFF"
        android:textSize="22sp" />

</RelativeLayout>